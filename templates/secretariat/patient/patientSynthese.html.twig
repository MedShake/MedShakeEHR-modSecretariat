{% import "macroForm.html.twig" as f %}
<div class="row changeObserv" id="synthesePatient" style="">

    <div class="jumbotron col-md-12 col-md-12">

      {% for module in page.modules %}
        {% set k=module.name %}
        {% if k != 'secretariat' and (page.modules|length < 4 or k != 'base') %}
          <div id="latForm" class="hideshow mod{{ k }} {% if k!=first %}d-none{% endif %} changeObserv">
            {% if page.synthFormNames[k] %}
              {{ f.formbuilder(page.synthFormDatas[k] , page.synthFormNames[k]) }}
            {% else %}
              {{ f.formbuilder(page.synthFormDatas['base'] , page.synthFormNames['base']) }}
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>

</div>
